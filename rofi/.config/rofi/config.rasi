@theme "~/.config/rofi/grid-icons.rasi"
configuration {
  modi: "drun,run";
  show-icons: true;
  drun-display-format: "{name}";
  icon-theme: "Papirus"; /* change if you use something else */
  font: "Inter 12";
  location: 0;          /* center */
  anchor: 0;            /* center */
  fullscreen: false;
  matching: "fuzzy";
  /* If your rofi supports it, this helps keep consistent sizing */
  display-drun: " ";
}
